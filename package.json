{
  "name": "nuxt-app",
  "version": "1.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "generate:pwa-assets": "pwa-assets-generator --preset minimal-2023 public/logo.svg",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier . --check",
    "lint:fix": "eslint . --fix && prettier --write --list-different .",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "dependencies": {
    "@nuxt/eslint": "^1.9.0",
    "@nuxt/image": "^2.0.0",
    "@nuxtjs/i18n": "^10.2.1",
    "@vite-pwa/nuxt": "^1.1.0",
    "better-sqlite3": "^12.5.0",
    "bowser": "^2.13.1",
    "drizzle-orm": "^0.43.1",
    "lodash": "^4.17.21",
    "nuxt": "^3.20.2",
    "plex-api": "^5.3.2",
    "vue-router": "^4.6.4",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@catppuccin/daisyui": "^2.1.1",
    "@cssninja/nuxt-toaster": "^0.5.0",

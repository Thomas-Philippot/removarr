    "@types/better-sqlite3": "^7.6.13",
    "@vite-pwa/assets-generator": "^1.0.2",
    "@vue/typescript-plugin": "^3.1.8",
    "daisyui": "^5.5.13",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.8.3",
    "vite-plugin-eslint2": "^5.0.3",
    "vitepress": "^1.6.4"
  },
  "overrides": {
    "vue": "latest"
  }
}
